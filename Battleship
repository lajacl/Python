from random import randint

board = [] #holds lists grid for game board
grid_size = 5 #square grid size

# Create board grid
for x in range(grid_size):
    board.append(["O"] * grid_size)

# Shows the current state of the game board
def print_board(board):
    for row in board:
        print " ".join(row)

print "Let's play Battleship!"
print_board(board)

# Chooses the place of the hidden batteship
def random_row(board):
    return randint(0, len(board) - 1)
def random_col(board):
    return randint(0, len(board[0]) - 1)

ship_row = random_row(board)
ship_col = random_col(board)
print ship_row
print ship_col

# Loop to limit number of guesses
for turn in range(4):
    print "Turn", turn + 1
    guess_row = int(raw_input("Guess Row:"))
    guess_col = int(raw_input("Guess Col:"))
    
    # Check if the guess is correct
    if guess_row == ship_row and guess_col == ship_col:
        print "Congratulations! You sunk my battleship!"
        break
    # Inncorrect guess
    else:
        # Guess outside of board limits
        if (guess_row < 0 or guess_row > 4) or (guess_col < 0 or guess_col > 4):
            print "Oops, that's not even in the ocean."
        # Guess already made
        elif(board[guess_row][guess_col] == "X"):
            print "You guessed that one already."
        # Guess incorrect 
        else:
            print "You missed my battleship!"
            board[guess_row][guess_col] = "X"
